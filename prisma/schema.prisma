datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Feedback {
  // chave primária
  // id Int @id @default(autoincrement())
  id String @id @default(uuid())
  type String
  comment String
  // foto é opcional
  screenshot String?

  // nome da tabela
  @@map("feedbacks")
}